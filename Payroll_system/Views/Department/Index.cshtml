@model List<Payroll_system.ViewModels.DepartmentViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Departments</h1>

<a class="btn btn-success" href="/department/create">Add</a>

<table class="table table-striped table-hover table-bordered mt-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
            </tr>
        }
    </tbody>
</table>

