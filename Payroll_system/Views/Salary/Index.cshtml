@model List<Payroll_system.ViewModels.SalaryViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Salary List</h1>
        </div>

        <div class="d-flex justify-content-end mt-3 shadow-sm p-3 mb-5 bg-body rounded">
            <div>
                <form asp-action="Index" method="get">
                    <div class="d-flex form-actions no-color">
                        <div class="me-2">
                            <input type="month" name="fromDate" />
                            <div>Month</div>
                        </div>
                        <div class="me-3">
                            <input type="date" name="toDate" />
                            <div>Year</div>
                        </div>
                        <div class="d-flex me-2">
                            <div class="me-2">
                                <select name="EmployeeId" class="form-control" asp-items="@ViewBag.employeelist"></select>
                            </div>
                            <div>
                                <input type="submit" value="Submit" class="btn btn-dark" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div>
                <a asp-controller="Salary" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle-fill"></i> &nbsp;New Salary
                </a>
            </div>
        </div>
    </div>

    <table class="table table-borderd table-striped align-middle" style="width:100%">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    EmployeeId
                </th>
                <th>
                    EmployeeName
                </th>
                <th>
                    Month
                </th>
                <th>
                    Year
                </th>
                <th>
                    GrossSalary
                </th>
                <th>
                    TotalPay
                </th>
                @*<th>
                    SalaryTypeName
                </th>*@
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="10%">
                        @item.Id
                    </td>
                    <td width="10%">
                        @item.EmployeeId
                    </td>
                    <td width="15%">
                        @item.EmployeeName
                    </td>
                    <td width="10%">
                        @item.Month
                    </td>
                    <td width="10%">
                        @item.Year
                    </td>
                    <td width="10%">
                        @item.GrossSalary
                    </td>
                    <td width="10%">
                        @item.TotalPay
                    </td>
                    @*<td width="20%">
                        @item.SalaryTypeName
                    </td>*@
                    <td>
                        <div class="btn-group mb-0" role="group">
                            <a asp-controller="Salary" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning rounded-1 text-end"> <i class="bi bi-pencil-square"></i>&nbsp;</a>
                            <a asp-controller="Salary" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1 rounded-1"> <i class="bi bi-trash3-fill"></i>&nbsp;</a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

