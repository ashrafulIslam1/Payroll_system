@model Payroll_system.ViewModels.SalaryViewModel


<div class="px-lg-5 border rounded-2 mx-lg-5 my-lg-5 small">
    <form class="row g-3  p-2 px-lg-5 mx-lg-5 my-lg-5" method="post">
        <div>
            <h2 class="text-primary fs-4">Update Salary</h2>
            <hr />
        </div>

        <div>
            <label asp-for="EmployeeName"></label>
            <select name="EmployeeId" class="form-control" asp-items="@ViewBag.employeelist">
                <option>Select Employee</option>
            </select>
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Month"></label>
            <input asp-for="Month" class="form-control" />
            <span asp-validation-for="Month" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Year"></label>
            <input asp-for="Year" class="form-control" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Basic"></label>
            <input asp-for="Basic" class="form-control" />
            <span asp-validation-for="Basic" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="HomeAllowance"></label>
            <input asp-for="HomeAllowance" class="form-control" />
            <span asp-validation-for="HomeAllowance" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="MedicalExpense"></label>
            <input asp-for="MedicalExpense" class="form-control" />
            <span asp-validation-for="MedicalExpense" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="TotalPay"></label>
            <input asp-for="TotalPay" class="form-control" />
            <span asp-validation-for="TotalPay" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-between">
            <a asp-controller="Salary" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Go back
            </a>
            <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

