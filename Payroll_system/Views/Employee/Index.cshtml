@model List<Payroll_system.ViewModels.EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Employee List</h1>
        </div>

        <div class="d-flex justify-content-end mt-3 shadow-sm p-3 mb-5 bg-body rounded">
            <form asp-action="Index" method="get">
                <div class="d-flex form-actions no-color">
                    <div class="me-2">
                        <input type="text" name="SearchString" value="@ViewData["currentFilter"]" placeholder=" Name" />
                    </div>
                    <div class ="d-flex me-3">
                        <select name="departmentId" class="form-control" asp-items="@ViewBag.departmentlist">
                            <option>Select Department</option>
                        </select>
                        <div class="ms-2">
                            <input type="submit" value="Search" class="btn btn-dark" />
                        </div>
                        
                    </div>
                </div>
            </form>
 
            <div>
                <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle-fill"></i> &nbsp;New Employee
                </a>
            </div>
        </div>
    </div>

    <table class="table table-borderd table-striped align-middle shadow-sm p-3 mb-5 bg-body rounded" style="width:100%">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]"><i class="bi bi-arrow-up"></i></a>
                </th>
                <th>
                    Dept
                </th>
                <th>
                    Present Address
                </th>
                <th>
                    Permanent Address
                </th>
                <th>
                    Join Date <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]"><i class="bi bi-arrow-down"></i></a>
                </th>
                <th>
                    Email
                </th>
                <th>
                    Mobile
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="10%">
                        @item.Id
                    </td>
                    <td width="22%">
                        @item.Name
                    </td>
                    <td width="10%">
                        @item.DepartmentName
                    </td>
                    <td width="18%">
                        @item.PresentAddress
                    </td>
                    <td width="18%">
                        @item.PermanentAddressBn
                    </td>
                    <td width="22%">
                        @item.JoinDate
                    </td>
                    <td width="10%">
                        @item.Email
                    </td>
                    <td width="10%">
                        @item.MobileNo
                    </td>
                    <td>
                        <div class="btn-group mb-0" role="group">
                            <a asp-controller="Employee" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning rounded-1"> <i class="bi bi-pencil-square"></i>&nbsp;</a>
                            <a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1 rounded-1"> <i class="bi bi-trash3-fill"></i>&nbsp;</a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

