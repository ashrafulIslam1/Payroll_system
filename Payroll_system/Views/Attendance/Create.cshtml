@model Payroll_system.ViewModels.AttendanceViewModel
@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div class="border p-3 mt-5 rounded-2">
        <div class="row pb-2">
            <h2 class="text-primary">Give Attendance</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="EmployeeName"></label>
            <select name="EmployeeId" class="form-control" asp-items="@ViewBag.employeelist"></select>
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="InTime"></label>
            <input asp-for="InTime" type="time" class="form-control" />
            <span asp-validation-for="InTime" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="OutTime"></label>
            <input asp-for="OutTime" type="time" class="form-control" />
            <span asp-validation-for="OutTime" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Date"></label>
            <input asp-for="Date" type="date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
    </div>
    <br />
    <button type="submit" class="bnt btn-primary" style="width:150px; height:37px; border-radius:3px" >Create</button>
    <a asp-controller="Attendance" asp-action="Index" class="btn btn-danger" style="width:150px">
        Go back
    </a>

</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}

