@model List<Payroll_system.ViewModels.DepartmentViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Department List</h1>
        </div>

        <div class="justify-content-end mt-3 shadow-sm p-3 mb-5 bg-body rounded">
            <div class="text-end">
                <a asp-controller="Department" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle-fill"></i> &nbsp;New Department
                </a>
            </div>
        </div>
    </div>

    <table class="table table-borderd table-striped align-middle" style="width:100%">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="5%">
                        @item.Id
                    </td>
                    <td width="20%">
                        @item.Name
                    </td>
                    <td>
                        <div class="btn-group mb-0" role="group">
                            <a asp-controller="Employee" asp-action="Index" asp-route-departmentId="@item.Id" class="btn btn-dark rounded-1"><i class="bi bi-card-list"></i>&nbsp;View</a>
                            @*<a asp-controller="Employee" asp-action="Index" asp-route-id="@item.Id" class="btn btn-dark rounded-1"> <i class="bi bi-card-list"></i>&nbsp;View</a>*@
                            <a asp-controller="Department" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning mx-1 rounded-1"> <i class="bi bi-pencil-square"></i>&nbsp;</a>
                            <a asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1 rounded-1"> <i class="bi bi-trash3-fill"></i>&nbsp;</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

