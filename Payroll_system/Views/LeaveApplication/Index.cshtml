@model List<Payroll_system.ViewModels.LeaveApllicationViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Leave Application List</h1>
        </div>

        <div class="d-flex justify-content-between mt-3">

            <form asp-action="Index" method="get">
                <div class="form-actions no-color">
                    <p>
                        <input type="text" name="SearchString" />
                        <input type="submit" value="Search" class="btn btn-success btn-sm" />
                    </p>
                </div>
            </form>

            <div class="text-end">
                <a asp-controller="LeaveApplication" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle-fill"></i> &nbsp;New Application
                </a>
            </div>
        </div>
    </div>

    <table class="table table-borderd table-striped align-middle" style="width:100%">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Employee Id
                </th>
                <th>
                    Reason Of Leave
                </th>
                <th>
                    Leave Type
                </th>
                <th>
                    From Date
                </th>
                <th>
                    To Date
                </th>
                <th>
                    Application Date
                </th>
                <th>
                    Approval Date
                </th>
                <th>
                    Approaved By
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="5%">
                        @item.Id
                    </td>
                    <td width="10%">
                        @item.EmployeeId
                    </td>
                    <td width="15%">
                        @item.ReasonOfLeave
                    </td>
                    <td width="10%">
                        @item.LeaveType
                    </td> 
                    <td width="10%">
                        @item.FromDate
                    </td>
                    <td width="10%">
                        @item.ToDate
                    </td>
                    <td width="12%">
                        @item.ApplicationDate
                    </td>
                    <td width="10%">
                        @item.ApprovalDate
                    </td>
                    <td width="10%">
                        @item.ApproavedBy
                    </td>
                    <td>
                        <div class="btn-group mb-0" role="group">
                            <a asp-controller="LeaveApplication" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning rounded-1"> <i class="bi bi-pencil-square"></i>&nbsp;</a>
                            <a asp-controller="LeaveApplication" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1 rounded-1"> <i class="bi bi-trash3-fill"></i>&nbsp;</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

