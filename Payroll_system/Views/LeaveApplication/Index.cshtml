@model List<Payroll_system.ViewModels.LeaveApllicationViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">

        <div class="d-flex justify-content-end shadow-sm p-3 pt-1 mb-4 bg-body rounded">
            <div class="col-4">
                <p class="fs-2 fw-semibold text-primary">Leave Application List</p>
            </div>
            <div>
                <form asp-action="Index" method="get">
                    <div class="d-flex form-actions no-color">
                        <div class="me-2">
                            <input type="date" name="fromDate" class="rounded-1" style="width:175px; height:34px;"/>
                            <div>From Date</div>
                        </div>
                        <div class="me-3">
                            <input type="date" name="toDate" class="rounded-1" style="width:175px; height:34px;"/>
                            <div>To Date</div>
                        </div>
                        <div class="d-flex me-2">
                            <div class="me-2">
                                <select name="EmployeeId" class="form-control" asp-items="@ViewBag.employeelist">
                                    <option>Select Employee</option>
                                </select>
                            </div>
                            <div>
                                <input type="submit" value="Submit" class="btn btn-dark" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="text-end">
                <a asp-controller="LeaveApplication" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle-fill"></i> &nbsp;New Application
                </a>
            </div>
        </div>
    </div>

    <table class="table table-borderd table-striped shadow-sm">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Employee Id
                </th>
                <th>
                    Employee Name
                </th>
                <th>
                    Reason Of Leave
                </th>
                <th>
                    Leave Type
                </th>
                <th>
                    From Date
                </th>
                <th>
                    To Date
                </th>
                <th>
                    Application Date
                </th>
                <th>
                    Approval Date
                </th>
                <th>
                    Approaved By
                </th>
                <th>

                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.EmployeeId
                    </td>
                    <td>
                        @item.EmployeeName
                    </td>
                    <td>
                        @item.ReasonOfLeave
                    </td>
                    <td>
                        @item.LeaveType
                    </td>
                    <td>
                        @item.FromDate.ToShortDateString()
                    </td>
                    <td>
                        @item.ToDate.ToShortDateString()
                    </td>
                    <td>
                        @item.ApplicationDate.ToShortDateString()
                    </td>
                    <td>
                        @item.ApprovalDate?.ToShortDateString()
                    </td>
                    <td>
                        @item.ApproavedBy
                    </td>
                    <td>
                        <div class="btn-group mb-0" role="group">
                            <a asp-controller="LeaveApplication" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary rounded-1"> <i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="LeaveApplication" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1 rounded-1"> <i class="bi bi-trash3-fill"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

