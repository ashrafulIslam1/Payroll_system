@model List<Payroll_system.ViewModels.AttendanceViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Attendance List</h1>
        </div>
        
        <div class="d-flex justify-content-end mt-3 shadow-sm p-3 mb-5 bg-body rounded">
            <div>
                <form asp-action="Index" method="get">
                    <div class="d-flex form-actions no-color">
                        <div class="me-2">
                            <input type="date" name="fromDate" />
                            <div>From Date</div>
                        </div>
                        <div class="me-3">
                            <input type="date" name="toDate" />
                            <div>To Date</div>
                        </div>
                        <div class="d-flex me-2">
                            <div class ="me-2">
                                <select name="EmployeeId" class="form-control" asp-items="@ViewBag.employeelist">
                                    <option>Select Employee</option>
                                </select>
                            </div>
                            <div>
                                <input type="submit" value="Submit" class="btn btn-dark" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="text-end">
                <a asp-controller="Attendance" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle-fill"></i> &nbsp;New Attendance
                </a>
            </div>
        </div>

    </div>

    <table class="table table-borderd table-striped shadow-sm">
        <thead>
            <tr>
                <th>
                    AttendanceID
                </th>
                <th>
                    EmployeeID
                </th>
                <th>
                    EmployeeName
                </th>
                <th>
                    InTime
                </th>
                <th>
                    OutTime
                </th>
                <th>
                    Date
                </th>
                <th>
                    Status
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td width="10%">
                        @item.AttendanceId
                    </td>
                    <td width="10%">
                        @item.EmployeeId
                    </td>
                    <td width="15%">
                        @item.EmployeeName
                    </td>
                    <td width="20%">
                        @item.InTime.ToShortTimeString()
                    </td>
                    <td width="20%">
                        @item.OutTime.ToShortTimeString()
                    </td>
                    <td width="20%">
                        @item.Date.ToShortDateString()
                    </td>
                    <td width="20%">
                        @(item.Status == 1 ? "Present" : "Absent")
                    </td>
                    <td>
                        <div class="btn-group mb-0" role="group">
                            <a asp-controller="Attendance" asp-action="Update" asp-route-id="@item.EmployeeId" class="btn btn-primary rounded-1"> <i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="Attendance" asp-action="Delete" asp-route-id="@item.EmployeeId" class="btn btn-danger mx-1 rounded-1"> <i class="bi bi-trash3-fill"></i></a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

