@model Payroll_system.ViewModels.DepartmentViewModel

@{
    ViewData["Title"] = "Update";
}

<div class="px-lg-5 border rounded-2 mx-lg-5 my-lg-5 small">
    <form class="row g-3  p-2 px-lg-5 mx-lg-5 my-lg-5" method="post">
        <div>
            <h2 class="text-primary">Update Department</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Id"></label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-between">
            <a asp-controller="Department" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Go back
            </a>
            <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        </div>
    </form>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }

