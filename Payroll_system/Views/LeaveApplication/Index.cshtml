@model List<Payroll_system.ViewModels.LeaveApllicationViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Leave Application List</h1>
        </div>

        <div class="d-flex justify-content-end mt-3 shadow-sm p-3 mb-5 bg-body rounded">
            <div>
                <form asp-action="Index" method="get">
                    <div class="d-flex form-actions no-color">
                        <div class="me-2">
                            <input type="text" name="searchString" />
                            <div>Leave Type</div>
                        </div>

                        <div class="me-2">

                            <input type="datetime-local" name="fromDate" />
                            <div>From Date</div>
                        </div>
                        <div class="me-3">
                            <input type="datetime-local" name="toDate" />
                            <input type="submit" value="Submit" class="btn btn-dark" />
                            <div>To Date</div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="text-end">
                <a asp-controller="LeaveApplication" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle-fill"></i> &nbsp;New Application
                </a>
            </div>
        </div>
    </div>

    <table class="table table-borderd table-striped align-middle" style="width:100%">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Employee Id
                </th>
                <th>
                    Reason Of Leave
                </th>
                <th>
                    Leave Type
                </th>
                <th>
                    From Date
                </th>
                <th>
                    To Date
                </th>
                <th>
                    Application Date
                </th>
                <th>
                    Approval Date
                </th>
                <th>
                    Approaved By
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="5%">
                        @item.Id
                    </td>
                    <td width="10%">
                        @item.EmployeeId
                    </td>
                    <td width="15%">
                        @item.ReasonOfLeave
                    </td>
                    <td width="10%">
                        @item.LeaveType
                    </td> 
                    <td width="10%">
                        @item.FromDate
                    </td>
                    <td width="10%">
                        @item.ToDate
                    </td>
                    <td width="12%">
                        @item.ApplicationDate
                    </td>
                    <td width="10%">
                        @item.ApprovalDate
                    </td>
                    <td width="10%">
                        @item.ApproavedBy
                    </td>
                    <td>
                        <div class="btn-group mb-0" role="group">
                            <a asp-controller="LeaveApplication" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning rounded-1"> <i class="bi bi-pencil-square"></i>&nbsp;</a>
                            <a asp-controller="LeaveApplication" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1 rounded-1"> <i class="bi bi-trash3-fill"></i>&nbsp;</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

