@model Payroll_system.ViewModels.MonthlySalaryViewModel

@{
    ViewData["Title"] = "Generate";
}

<div class="px-lg-5 border rounded-2 mx-lg-5 my-lg-5 small">
    <form class="row g-3  p-2 px-lg-5 mx-lg-5 my-lg-5" method="post">
        <div>
            <h2 class="text-primary fs-4">Generate Salary</h2>
            <hr />
        </div>

        <div class="col-md-6">
            <label asp-for="Month"></label>
            <input asp-for="Month" class="form-control" />
            <span asp-validation-for="Month" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Year"></label>
            <input asp-for="Year" class="form-control" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-controller="MonthlySalary" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Go back
            </a>
            <button type="submit" class="btn btn-primary" style="width:150px">Generate</button>
        </div>
    </form>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
   }
